<Window x:Class="Markdig.Wpf.SampleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:markdig="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
        mc:Ignorable="d"
        Title="Markdig.Wpf Sample - Math Demo">
  <FrameworkElement.CommandBindings>
        <CommandBinding Command="{x:Static markdig:Commands.Hyperlink}" Executed="OpenHyperlink" />
        <CommandBinding Command="{x:Static markdig:Commands.Image}" Executed="ClickOnImage" />
    </FrameworkElement.CommandBindings>
  <DockPanel>
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
      <Button x:Name="ToggleExtensionsButton" 
          Content="Toggle Extensions" 
              Click="ToggleExtensionsButton_OnClick" 
      Margin="5" Padding="10,5"/>
  <Button x:Name="LoadMathDemoButton" 
   Content="Load Math Demo" 
           Click="LoadMathDemoButton_OnClick" 
 Margin="5" Padding="10,5"/>
      <Button x:Name="LoadLatexTestButton" 
         Content="Load LaTeX Test" 
        Click="LoadLatexTestButton_OnClick" 
              Margin="5" Padding="10,5"/>
      <Button x:Name="LoadReadmeButton" 
         Content="Load README" 
        Click="LoadReadmeButton_OnClick" 
              Margin="5" Padding="10,5"/>
    <Button x:Name="StreamingTestButton" 
        Content="?? Streaming Test" 
   Click="StreamingTestButton_OnClick" 
              Margin="5" Padding="10,5"
         Background="#FF6B35"
       Foreground="White"
  FontWeight="Bold"
   ToolTip="Open streaming test window to verify LaTeX math rendering during real-time content streaming"/>
    </StackPanel>
    <markdig:MarkdownViewer x:Name="Viewer"/>
  </DockPanel>
</Window>
